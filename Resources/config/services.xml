<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Filer service -->
    <services>
        <service id="iad_filer.manager.document_object" class="Iad\Bundle\FilerTechBundle\Manager\DocumentObjectManager" parent="iad_core.manager.abstract" />

        <service id="iad_filer.encoder" class="Iad\Bundle\FilerTechBundle\Business\Encoder" public="false" />
        <service id="iad_filer.builder" class="Iad\Bundle\FilerTechBundle\Business\FileResource\FileBuilder">
            <argument type="service" id="iad_filer.encoder" />
        </service>

        <service id="iad_filer.image.manager" class="Iad\Bundle\FilerTechBundle\Business\ImageManager">
            <argument type="service" id="liip_imagine.filter.manager" />
        </service>

        <service id="iad_filer" class="Iad\Bundle\FilerTechBundle\Business\Filer">
            <argument type="service" id="iad_filer.encoder" />
            <argument type="service" id="iad_filer.manager.document_object" />
            <argument type="service" id="iad_filer.image.manager" />
            <argument type="service" id="router" />
            <argument type="service" id="gaufrette.file_system" />
            <argument>
                small
            </argument>
        </service>

        <service id="gaufrette.adapter" class="Gaufrette\Adapter\Local">
            <argument>%iad_filer_tech_local_adapter_dir%</argument>
        </service>

        <service id="gaufrette.file_system" class="Gaufrette\Filesystem">
            <argument type="service" id="gaufrette.adapter" />
        </service>

    </services>
</container>
