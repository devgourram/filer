<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Filer service -->
    <services>
        <service id="iad_filer.manager.document_object" class="Iad\Bundle\FilerTechBundle\Manager\DocumentObjectManager" parent="iad_core.manager.abstract" />

        <service id="iad_filer.encoder" class="Iad\Bundle\FilerTechBundle\Business\Encoder" />


        <service id="iad_filer" class="Iad\Bundle\FilerTechBundle\Business\Filer" />

        <service id="iad_filer.filer_factory" class="Iad\Bundle\FilerTechBundle\Business\FilerFactory">
            <argument type="service" id="iad_filer.manager.document_object" />
            <argument type="service" id="iad_filer.encoder" />
        </service>

        <service id="iad_filer.avatar_filer" class="Iad\Bundle\FilerTechBundle\Business\AvatarFiler">
            <tag name="iad_filer.business.service" />
            <factory service="iad_filer.filer_factory" method="createAvatarFiler" />
        </service>
    </services>
</container>
